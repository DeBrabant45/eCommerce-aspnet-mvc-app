@*Define model*@
@model IEnumerable<Producer>
@{
    ViewData["Title"] = "List of Producers";
}

@*Define ViewData*@
<div class="row">
    <div class="coll-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr> 
                    <th>@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ProfilePictureURL" atl="@item.FullName" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelActor => item.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelActor => item.Bio)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"> <i class="bi bi-pencil-square">Edit</i> </a> |
                            <a class="btn btn-outline-primary"> <i class="bi bi-eye">Details</i> </a> |
                            <a class="btn btn-danger text-white"> <i class="bi bi-trash">Delete</i> </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>