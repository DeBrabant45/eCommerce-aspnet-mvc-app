@*Define model*@
@model IEnumerable<Cinema>
@{
    ViewData["Title"] = "List of Cinemas";
}

@*Define ViewData*@
<div class="row">
    <div class="coll-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.LogoUrl)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.LogoUrl" atl="@item.Name" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelActor => item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelActor => item.Description)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"> <i class="bi bi-pencil-square">Edit</i> </a> |
                            <a class="btn btn-outline-primary"> <i class="bi bi-eye">Details</i> </a> |
                            <a class="btn btn-danger text-white"> <i class="bi bi-trash">Delete</i> </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>